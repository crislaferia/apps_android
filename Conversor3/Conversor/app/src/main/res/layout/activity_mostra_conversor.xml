<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostraConversor">

    <Button
        android:id="@+id/btnmoedas"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4E2143"
        android:onClick="moedas"
        android:text="Moedas"
        android:textColor="#E8E8E8"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpeso" />

    <Button
        android:id="@+id/btninf"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4E2143"
        android:onClick="mdinfo"
        android:text="Medidas Informaticas"
        android:textColor="#E8E8E8"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmoedas" />

    <Button
        android:id="@+id/btndist"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="#4E2143"
        android:onClick="distancias"
        android:text="DistÃ¢ncias"
        android:textColor="#E8E8E8"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnpeso"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4E2143"
        android:onClick="pesos"
        android:text="Pesos"
        android:textColor="#E8E8E8"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndist" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="39dp"
        android:layout_marginTop="36dp"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textSize="12pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsair"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#4E2143"
        android:onClick="sair"
        android:text="SAIR"
        android:textColor="#E8E8E8"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndist" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175dp"
        android:layout_height="158dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/btndist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/lododt" />

    <Button
        android:id="@+id/btntemp"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4E2143"
        android:onClick="temp"
        android:text="Temperaturas"
        android:textColor="#E8E8E8"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btninf" />
</androidx.constraintlayout.widget.ConstraintLayout>